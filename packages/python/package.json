{
  "name": "scribe-python",
  "version": "0.1.0",
  "keywords": [
    "theia-extension"
  ],
  "scripts": {
    "build:style": "npx tailwindcss -i ./src/browser/styles/globals.css -o ./lib/browser/output-tailwind.css -c ./tailwind.config.js",
    "build:ts": "tsc",
    "build": "yarn build:ts && yarn build:style",
    "production": "yarn build",
    "watch": "npm-watch build",
    "clean": "rimraf lib node_modules *.tsbuildinfo",
    "productionCICD": "yarn build"
  },
  "dependencies": {
    "@theia/core": "1.51.0",
    "axios": "^1.6.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "inversify": "^6.0.1",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17",
    "npm-watch": "^0.13.0"
  },
  "files": [
    "lib",
    "src"
  ],
  "theiaExtensions": [
    {
      "backend": "lib/node/python-backend-module",
      "frontend": "lib/browser/python-frontend-module"
    }
  ],
  "watch": {
    "build": {
      "patterns": [
        "src/**/*"
      ],
      "extensions": "ts,html,scss,css,tsx,json",
      "quiet": false
    }
  }
}
